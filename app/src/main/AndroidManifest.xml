<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iansangines.appnimals">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appnimals_outside"
        android:label="Appnimals"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait" >
        <activity
            android:name=".Activities.LaunchActivity"
            android:label="Appnimals"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.PetListActivity"
            android:label="@string/title_activity_pet_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.InsertPetActivity"
            android:label="@string/title_activity_insert_pet"
            android:parentActivityName=".Activities.PetListActivity"
            android:theme="@style/AppTheme"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.PetListActivity" />
        </activity>
        <activity
            android:name=".Activities.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName=".Activities.PetListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.PetListActivity" />
        </activity>
        <activity
            android:name=".Activities.CalendarActivity"
            android:label="@string/title_activity_calendar" />
        <activity
            android:name=".Activities.AddEventActivity"
            android:label="@string/title_activity_add_event" />
        <activity android:name=".Activities.EditPetActivity"></activity>
    </application>

</manifest>
